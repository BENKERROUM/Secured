<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_round">
    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:scaleType="center"
        android:background="@color/colorPrimary"
        android:id="@+id/txtLabel"
        android:text="@string/newPasswordText"
        android:textColor="@color/colorFill"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/Title_Label"
        android:paddingLeft="5dp"/>

        <AutoCompleteTextView
            android:id="@+id/edtInputName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="5dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif-condensed"
            style="@style/StrokeButtonStyle"
            android:layout_margin="5dp"
            android:gravity="left"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/Password_Label"
        android:paddingLeft="5dp"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent"
        style="@style/StrokeButtonStyle"
        android:layout_margin="5dp">

        <AutoCompleteTextView
            android:id="@+id/edtInputPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorTransparent"
            android:fontFamily="sans-serif-condensed"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textStyle="normal|bold"
            android:gravity="left"
            android:padding="5dp"/>
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/Description_Label"
        android:paddingLeft="5dp"/>
    <AutoCompleteTextView
        android:id="@+id/edtInputDesc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="text"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        style="@style/StrokeButtonStyle"
        android:layout_margin="5dp"
        android:gravity="left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:tint="@color/colorFill"
            app:layout_anchor="@+id/frameLayout"
            app:layout_anchorGravity="center"
            android:src="@drawable/ic_done_24dp" />
        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:tint="@color/colorFill"
            app:layout_anchor="@+id/frameLayout"
            app:layout_anchorGravity="center"
            android:src="@drawable/ic_clear_24dp" />


    </LinearLayout>
</LinearLayout>